<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="${pageContext.request.contextPath}/img/user2-160x160.jpg"
                     class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>
                    <security:authentication property="principal.username"/>
                </p>
                <a href="#"><i class="fa fa-circle text-success"></i> 在线</a>
            </div>
        </div>

        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">菜单</li>
            <%--<li id="admin-index"><a
                    href="${pageContext.request.contextPath}/pages/main.jsp"><i
                    class="fa fa-dashboard"></i> <span>首页</span></a></li>--%>

            <%--遍历菜单（顶层）--%>
            <c:forEach items="${tblMenuDTOList}" var="permissionDTO">
                    <li class="treeview">
                        <a href="#"> <i class="fa fa-cogs"></i>
                            <span>${permissionDTO.name}</span>
                            <span class="pull-right-container"> <i
                                    class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>

                        <%--  asaaa--%>
                        <ul class="treeview-menu">
                            <c:forEach items="${permissionDTO.tblMenuSet}" var="permission">
                                <li id="system-setting"><a
                                        href="${pageContext.request.contextPath}${permission.url}"> <i
                                        class="fa fa-circle-o"></i> ${permission.name}
                                </a>
                                    <ul class="treeview-menu">
                                        <c:forEach items="${tblMenuDTOList2}" var="permission2">
                                            <c:if test="${permission2.uuid==permission.uuid}">
                                                <c:forEach items="${permission2.tblMenuSet}" var="permission3">
                                                    <li><a href="${pageContext.request.contextPath}/${permission3.url}">
                                                        <i class="fa fa-circle-o"></i>${permission3.name}</a></li>
                                                </c:forEach>
                                            </c:if>
                                        </c:forEach>
                                    </ul>
                                </li>
                            </c:forEach>
                        </ul>
                    </li>
            </c:forEach>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
